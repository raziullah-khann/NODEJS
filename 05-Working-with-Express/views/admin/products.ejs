<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if(prods.length> 0 ) { %>
                    <h3 class="admin__title">Only login Admin product visible here!</h3>
                    <div class="grid">
                        <% for(let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= product.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <!-- <img src="/<%= product.imageUrl %>" alt="<%= product.title %>" /> -->
                                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>" />
                                </div>
                                <div class="card__content">
                                    <h2 class="product__price">â‚¹<%= product.price %>
                                    </h2>
                                    <p class="product__description">
                                        <%= product.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn">Edit</a>
                                    <!-- <form action="/admin/delete-product" method="POST"> -->
                                        <input type="hidden" name="productId", value="<%= product._id %>">
                                        <!-- i will listen to a click to this button and then i will gather the product id and csrftoken manually through the help of client side js -->
                                        <!-- <button class="btn" type="button" onClick="deleteProduct(this)">Delete</button>  -->
                                        <button class="btn delete-btn" data-product-id="<%= product._id %>"">
                                            Delete
                                        </button>
                                        
                                    <!-- </form> -->
                                </div> 
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Product Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
            <script src="/js/admin.js"></script>