    <nav class="main-header-nav">
        <ul class="main-header-list-item">
            <li class="main-header-item">
                <a href="/" class="<%= path=== '/' ? 'active' : '' %>">Shop</a>
            </li>
            <li class="main-header-item">
                <a href="/products" class="<%= path === '/products' ? 'active' : '' %>">Products</a>
            </li>
            <% if(isAuthenticated){ %>
                <li class="main-header-item">
                    <a href="/cart" class="<%= path === '/cart' ? 'active' : '' %>">Cart</a>
                </li>
                <li class="main-header-item">
                    <a href="/orders" class="<%= path === '/orders' ? 'active' : '' %>">Orders</a>
